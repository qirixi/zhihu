<!--question.wxml-->
<view class="container">
    <view class="question-wrp">
        <view class="question-item">
            <view class="que-tag">
                <block wx:for="{{questionInfo.question_tag_list}}" wx:key="key" >
                    <text class="tag">{{item}}</text>
                </block>

            </view>
            <view class="que-title">
                {{questionInfo.question_title}}
            </view>
            <view class="que-content">
                 {{questionInfo.question_content}}
            </view>
            <view class="que-follow">
                <view class="left">
                    <view class="watch">
                        <image src="../../images/eye.png"></image>
                        <text>{{questionInfo.watch_num}}</text>
                    </view>
                    <view class="comment">
                        <image src="../../images/comment2.png"></image>
                        <text>{{questionInfo.comment_num}}</text>
                    </view>
                </view>
                <view class="right">
                    关注
                </view>
            </view>
        </view>
        <view class="que-operate flex-wrp">
            <view class="invite flex-item" >
                <image src="../../images/invite.png"></image>
                <text>邀请回答</text>
            </view>
            <view class="write flex-item" bindtap="bindWriteTap">
                <image src="../../images/write.png"></image>
                <text>写回答</text>
            </view>
        </view>
    </view>
    <view class="answer-feed">
        <block wx:for="{{questionInfo.answer_list}}" wx:key="key" >
            <view  bindtap="bindItemTap" class="feed-item">
                <view class="feed-source">
                    <a class="" bindTap="">
                        <view class="avatar">
                            <image src="{{item.feed_source_img}}"></image>
                        </view>
                        <text>{{item.feed_source_name}}</text>
                    </a>
                </view>
                <view class="feed-content">
                    <view class="answer-body">
                        <view>
                            <text class="answer-txt">{{item.answer_content}}</text>
                        </view>
                        <view class="answer-actions">
                            <view class="like dot">
                                <a>{{item.good_num}} 赞同</a>
                            </view>
                            <view class="comments">
                                <a>{{item.comment_num}} 评论 </a>
                            </view>
                            

                        </view>
                    </view>
                </view>
            </view>
        </block>
    </view>
</view>

